{
  "manifest_version": 2,

  "name": "Styles Dev Tool",
  "description": "Tool for changing your component styling.",
  "version": "0.0.1",
  "permissions": [
    "<all_urls>",
    "storage"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "devtools_page": "devtools.html",
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content-script.js"],
    "run_at": "document_end",
    "all_frames": true
  }],
  "background": {
    "scripts": ["background-script.js"]
  },
  "page_action": {
    "default_icon": {
      "19": "panes/assets/images/icon19.png",
      "38": "panes/assets/images/icon38.png"
    },
    "default_title": "This webpage is running Ember.js"
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options-dialog.html",
    "chrome_style": true
  }
}
