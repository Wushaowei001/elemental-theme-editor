<form class="form" {{action "edit" on="submit"}}>

  <section class="form__header">
    <nav class="btn-bar">
      <button class="icon__btn {{inspectActive}}" {{action 'inspect'}}>
        {{iconic-icon name="target"}}
      </button>

      <button class="icon__btn" {{action 'reload'}}>
        {{iconic-icon name="loop-circular"}}
      </button>
    </nav>
  </section>

  <section class="form__section">
    <h1 class="form__header">THEME</h1>
    <div class="fieldset">
      <label class="label" for="fontFamily">
        Font Family
      </label>
      {{ete-autocomplete name="fontFamily" options=fonts value=fontFamily}}
    </div>

    <div class="fieldset">
      <label class="label" for="scale">
        Scale
      </label>
      {{input name="scale" class="input" type="text" value=scale}}
    </div>

    <div class="fieldset">
      <label class="label" for="color">
        Color
      </label>
      {{input name="color" class="input" type="text" value=color}}
      {{input name="color" class="input--color" type="color" value=color }}
    </div>
  </section>

  <div class="fieldset">
    <label class="label" for="surface">
      Surface
    </label>
    <label class="checkbox">
      {{input class="input" name="surface" type="checkbox" checked=surface}}
      <div class="toggle"></div>
    </label>
  </div>

  <button class="btn" {{action "save"}}>SAVE THEME</button>

</form>
