
<form class="form" {{action "edit" on="submit"}}>

  <section class="form__header">
    <nav class="btn-bar">
      <button class="icon__btn" {{action 'inspect'}}>
        <img class="iconic" data-src="icons/target.svg">
      </button>

      <button class="icon__btn" {{action 'reload'}}>
        <img class="iconic" data-src="icons/loop-circular.svg">
      </button>
    </nav>
  </section>

  <section class="form__section">
    <h1 class="form__header">THEME</h1>
    <div class="fieldset">
      <label class="label" for="fontFamily">
        Font Family
      </label>
        {{input name="fontFamily" class="input input--font-family" type="text" value=fontFamily}}
    </div>

    <div class="fieldset">
      <label class="label" for="scale">
        Scale
      </label>
      {{input name="scale" class="input" type="number" value=scale}}
    </div>

    <div class="fieldset">
      <label class="label" for="color">
        Color
      </label>
      {{input name="color" class="input" type="text" value=color}}
      {{input name="color" class="input--color" type="color" value=color }}
    </div>
  </section>

  <section class="form__section">
    <h1 class="form__header">CUSTOM</h1>
  </section>

  <div class="fieldset">
    <label class="label" for="surface">
      Surface Light
    </label>
    {{input name="surface" type="checkbox" checked=surface}}
  </div>

  <button class="btn" {{action "save"}}>SAVE THEME</button>

</form>

